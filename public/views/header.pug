doctype html

head
    if page == 'main'
        title Pollarama - Polls for everyone!
    else if page == 'Dashboard'
        if user
            title Pollarama - #{user.name}'s Dashboard
        else 
        // The user should never see this one
            title Pollarama - Dashboard
    else if page == 'Create Poll'
        title Pollarama - Create Poll
    else if page == 'Login'
        title Pollarama - Login
    else if page == 'Poll'
        script(src='js/Chart.js' type='text/javascript')
        title Pollarama - Poll  #{poll.name}
    else if page == 'Edit Poll'
        script(src='js/Chart.js' type='text/javascript')
        title Pollarama - Poll  #{poll.name}
    else
        title Pollarama
    
    script(src='js/jquery.min.js' type='text/javascript')
    script(src='js/bootstrap.min.js' type='text/javascript')
    
    link(href='icons/devicons.min.css' rel='stylesheet')
    link(href='bs/bootstrap.css' type='text/CSS')
 
    script(src='scripts/client/visualScript.js' type='text/javascript')   
    link(href='styles/css/stylesheet.css' rel='stylesheet' type='text/CSS')
    
